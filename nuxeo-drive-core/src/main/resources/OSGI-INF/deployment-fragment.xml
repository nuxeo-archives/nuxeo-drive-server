<?xml version="1.0"?>
<fragment version="1">

  <extension target="web#STD-AUTH-FILTER">

    <filter-mapping>
      <filter-name>NuxeoAuthenticationFilter
      </filter-name>
      <url-pattern>/api/v1/drive/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

  </extension>

  <!-- Nuxeo Drive configuration servlet -->
  <extension target="web#SERVLET">

    <servlet>
      <servlet-name>Nuxeo Drive Configuration Servlet</servlet-name>
      <servlet-class>org.nuxeo.drive.servlet.NuxeoDriveConfigurationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>Nuxeo Drive Configuration Servlet</servlet-name>
      <url-pattern>/api/v1/drive/configuration</url-pattern>
    </servlet-mapping>

  </extension>

</fragment>
